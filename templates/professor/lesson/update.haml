-extends "base.haml"

-load bootstrap3

-block breadcrumb
  %ol.breadcrumb
    %li
      %a{href: "{% url 'professor:dashboard' %}"} Oscar
    %li
      %a{href: "{% url 'professor:lesson_detail' lesson.pk %}"}
        Classe
        =lesson.name
    %li.active
      Modifier

-block content
  .panel.panel-default
    .panel-heading Modifier la classe <i>{{ lesson.name }}</i>

    .panel-body
      %form.form{action: "", method: "post"}
        -csrf_token
        -bootstrap_form form
        {% buttons %}
          %button.btn.btn-primary{type: "submit"}
            Modifier
          %a.btn.btn-default{href: "{% url 'professor:lesson_detail' lesson.pk %}"}
            Annuler
        {% endbuttons %}
