-extends "algebra/base.haml"
-load static
-block javascript
  %script{type: "text/javascript", src: "{% static 'js/trainingExercices.js' %}"}
-block bootstrap3_title
  Training session
-block breadcrumb
  %br
  %br
  %ol.breadcrumb
    %li
      %a{ :href => "{% url 'home' %}", :title => "Home" }
        Home
    %li
      %a{ :href => "{% url 'algebra:list' %}", :title => "Liste exercice" }
        Algebra
    %li.active
      Training session
-block algebra_content
    %form.formgroup
      .well
        .py-5.pi-draggle{:draggable => "true"}
          .col-md-12
            %h1.text-center.display-3.text-primary
              - for expression in expressions
                %div{:class => "equation_type hide", :id=> "#{expression.id}_type"} Type : #{expression.expression_type}
            %h2.text-center.text-dark
              %em
                - for expression in expressions
                  %div{:class => "equation_level hide", :id=> "#{expression.id}_level"} Level : #{expression.level}


        #s_pricing1.p-1{:draggable => "true"}
          .row
            .p-3.align-self-top.col-md-8
              %h1{:id => "question_title"} Question :
              %hr
              %p
                - for expression in expressions
                    %div{:class => "equation hide", :id=> "#{expression.id}_expression"} #{expression.expression}
            .p-3.align-self-top.col-md-4
              %h1 Score
              %hr
              %p{:id => "success-progress"} Success : 0/10
              %p Progress :
              .progress.pi-draggable{:draggable => "true"}
                .progress-bar.progress-bar-striped{:id => "question-progress", :aria-valuemax => "100", :aria-valuemin => "0", :aria-valuenow => "80", :role => "progressbar", :style => "width: 0%"} 0%



        #s_pricing2.p-1{:draggable => "true"}
          .row
            .p-3.align-self-top.col-md-8
             .row
               .align-self-center.col-md-8
                 %input.form-control{:name => "termWithVariable", :placeholder => "Step 1", :id => "step1"}/
                 %input.form-control{:name => "termWithVariable", :placeholder => "Step 2", :id => "step2"}/
                 %input.form-control{:name => "termWithVariable", :placeholder => "Step 3", :id => "step3"}/
                 %input.form-control{:name => "termWithVariable", :placeholder => "Step 4", :id => "step4"}/
               .p-3.align-self-center.col-md-4
                 %input.form-control{:name => "termWithVariable", :placeholder => "Hint step 1", :readonly, :id => "hintstep1"}/
                 %input.form-control{:name => "termWithVariable", :placeholder => "Hint step 2", :readonly, :id => "hintstep2"}/
                 %input.form-control{:name => "termWithVariable", :placeholder => "Hint step 3", :readonly, :id => "hintstep3"}/
                 %input.form-control{:name => "termWithVariable", :placeholder => "Hint step 4", :readonly, :id => "hintstep4"}/
             %hr
             .row
               .col-md-3
                 %a.btn.btn-danger.btn-block{:id => "clear"} Clear
               .col-md-3
                 %a.btn.btn-success.btn-block{:id => "previous"} Previous
               .col-md-3
                 %a.btn.btn-success.btn-block{:id => "next"} Next
               .col-md-3
                 %a.btn.btn-primary.btn-block.text-white{:id => "check"} Check
            .p-3.align-self-top.col-md-4
              %h2 Test navigation
              %hr
              .div{:id=>"clickQuestions"}
/ Contenair Question + nav FIN
